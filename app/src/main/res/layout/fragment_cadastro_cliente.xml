<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.CadastroClienteFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<!--        <ImageView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            />-->


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPF: "
                android:id="@+id/tvCadastroClienteCpf"
                />

            <EditText
                android:id="@+id/etCadastroClienteCpf"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@drawable/cadastro_botao"
                android:inputType="numberDecimal"
                android:paddingLeft="10dp"
                android:hint="CPF"
                android:text="0824458260" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome: "
                android:id="@+id/tvCadastroClienteNome"/>

            <EditText
                android:id="@+id/etCadastroClienteNome"
                android:layout_width="168dp"
                android:layout_height="34dp"
                android:background="@drawable/cadastro_botao"
                android:paddingLeft="10dp"
                android:hint="Nome"
                android:text="Ruan"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sobrenome: "
                android:id="@+id/tvCadastroClienteSobrenone"/>

            <EditText
                android:id="@+id/etCadastroClienteSobrenome"
                android:layout_width="211dp"
                android:layout_height="34dp"
                android:background="@drawable/cadastro_botao"
                android:paddingLeft="10dp"
                android:hint="Henkes"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Celular: "
                android:id="@+id/tvCadastroClienteCelular"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:id="@+id/etCadastroClienteCelular"
                android:inputType="numberDecimal"
                android:background="@drawable/cadastro_botao"
                android:paddingLeft="10dp"
                android:text="51982481936 "
                android:hint="Celular"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:id="@+id/tvCadastroClienteEmail"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:id="@+id/etCadastroClienteEmail"
                android:background="@drawable/cadastro_botao"
                android:paddingLeft="10dp"
                android:hint="Email"
                android:text="ruanhenkes.va601@academico.ifsul.edu.br"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senha: "
                android:id="@+id/tvCadastroClienteSenha"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:id="@+id/etCadastroClienteSenha"
                android:background="@drawable/cadastro_botao"
                android:paddingLeft="10dp"
                android:text="12345"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado: "
                android:id="@+id/tvCadastroClienteEstado"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:id="@+id/etCadastroClienteEstado"
                android:background="@drawable/cadastro_botao"
                android:paddingLeft="10dp"
                android:text="RS"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cidade: "
                android:id="@+id/tvCadastroClienteCidade"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:id="@+id/etCadastroClienteCidade"
                android:background="@drawable/cadastro_botao"
                android:paddingLeft="10dp"
                android:text="Santa Cruz do Sul"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bairro: "
                android:id="@+id/tvCadastroClienteBairro"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:id="@+id/etCadastroClienteBairro"
                android:background="@drawable/cadastro_botao"
                android:paddingLeft="10dp"
                android:text="Schulz"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cep: "
                android:id="@+id/tvCadastroClienteCep"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:id="@+id/etCadastroClienteCep"
                android:inputType="numberDecimal"
                android:background="@drawable/cadastro_botao"
                android:paddingLeft="10dp"
                android:text="96845710"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero do endereÃ§o: "
                android:id="@+id/tvCadastroClienteNumeroEndereco"/>

            <EditText
                android:id="@+id/etCadastroClienteNumeroEndereco"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:inputType="numberDecimal"
                android:background="@drawable/cadastro_botao"
                android:paddingLeft="10dp"
                android:text="70"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salvar"
                android:id="@+id/bCadastroClienteSalvar"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:id="@+id/bCadastroClienteCancelar"/>

        </GridLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>